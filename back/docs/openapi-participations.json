{
  "openapi": "3.0.3",
  "info": {
    "title": "SnapTrack Participations API",
    "description": "API for managing user participations in journeys in SnapTrack application.",
    "version": "1.0.0",
    "contact": {
      "name": "SnapTrack Team"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Development server"
    },
    {
      "url": "https://snaptrack-nd9h.onrender.com",
      "description": "Production server"
    }
  ],
  "tags": [
    {
      "name": "Participations",
      "description": "Journey participation management endpoints"
    }
  ],
  "paths": {
    "/participations": {
      "get": {
        "tags": ["Participations"],
        "summary": "Get all participations",
        "description": "Returns a list of all participations, optionally filtered by journey ID.",
        "operationId": "getAllParticipations",
        "parameters": [
          {
            "name": "journeyId",
            "in": "query",
            "description": "Filter participations by journey ID",
            "required": false,
            "schema": {
              "$ref": "#/components/schemas/ObjectId"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ParticipationPopulated"
                  }
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      },
      "post": {
        "tags": ["Participations"],
        "summary": "Add a participant to a journey",
        "description": "Creates a new participation linking a user to a journey. Returns 409 if the user is already registered.",
        "operationId": "createParticipation",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ParticipationCreateInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Participant added successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ParticipationCreateResponse"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "409": {
            "$ref": "#/components/responses/ParticipationConflict"
          }
        }
      },
      "delete": {
        "tags": ["Participations"],
        "summary": "Remove a participant from a journey",
        "description": "Removes a user's participation from a journey using userId and journeyId query parameters.",
        "operationId": "removeParticipationByQuery",
        "parameters": [
          {
            "name": "userId",
            "in": "query",
            "description": "The user ID to remove from the journey",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/ObjectId"
            }
          },
          {
            "name": "journeyId",
            "in": "query",
            "description": "The journey ID to remove the user from",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/ObjectId"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Participant removed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ParticipationRemoveResponse"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/MissingQueryParams"
          },
          "404": {
            "$ref": "#/components/responses/ParticipationNotFound"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/participations/journey/{journeyId}": {
      "get": {
        "tags": ["Participations"],
        "summary": "Get participants of a journey",
        "description": "Returns a simplified list of all participants for a specific journey.",
        "operationId": "getJourneyParticipants",
        "parameters": [
          {
            "$ref": "#/components/parameters/JourneyId"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ParticipantListItem"
                  }
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/participations/{id}": {
      "get": {
        "tags": ["Participations"],
        "summary": "Get participation by ID",
        "description": "Returns a single participation by its ID with populated user and journey data.",
        "operationId": "getParticipationById",
        "parameters": [
          {
            "$ref": "#/components/parameters/ParticipationId"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ParticipationPopulated"
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/ParticipationNotFound"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      },
      "put": {
        "tags": ["Participations"],
        "summary": "Update a participation",
        "description": "Updates an existing participation (e.g., change status).",
        "operationId": "updateParticipation",
        "parameters": [
          {
            "$ref": "#/components/parameters/ParticipationId"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ParticipationUpdateInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Participation updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Participation"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "404": {
            "$ref": "#/components/responses/ParticipationNotFound"
          }
        }
      },
      "delete": {
        "tags": ["Participations"],
        "summary": "Delete a participation by ID",
        "description": "Deletes a participation record by its ID.",
        "operationId": "deleteParticipation",
        "parameters": [
          {
            "$ref": "#/components/parameters/ParticipationId"
          }
        ],
        "responses": {
          "200": {
            "description": "Participation deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DeleteResponse"
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/ParticipationNotFound"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ObjectId": {
        "type": "string",
        "pattern": "^[a-fA-F0-9]{24}$",
        "description": "MongoDB ObjectId (24 character hex string)",
        "example": "681ff9a3d2c8f4b5e6a12345"
      },
      "Timestamps": {
        "type": "object",
        "properties": {
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Creation timestamp"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Last update timestamp"
          }
        }
      },
      "ParticipationStatus": {
        "type": "string",
        "enum": ["open", "running", "completed"],
        "default": "open",
        "description": "Status of the participation",
        "example": "open"
      },
      "UserBasic": {
        "type": "object",
        "properties": {
          "_id": {
            "$ref": "#/components/schemas/ObjectId"
          },
          "username": {
            "type": "string",
            "minLength": 3,
            "maxLength": 30,
            "description": "User's username",
            "example": "johndoe"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "User's email address",
            "example": "john@example.com"
          }
        },
        "required": ["_id", "username"]
      },
      "JourneyBasic": {
        "type": "object",
        "properties": {
          "_id": {
            "$ref": "#/components/schemas/ObjectId"
          },
          "title": {
            "type": "string",
            "description": "Journey title",
            "example": "Paris Discovery Tour"
          }
        },
        "required": ["_id"]
      },
      "Participation": {
        "type": "object",
        "properties": {
          "_id": {
            "$ref": "#/components/schemas/ObjectId"
          },
          "userId": {
            "$ref": "#/components/schemas/ObjectId"
          },
          "journeyId": {
            "$ref": "#/components/schemas/ObjectId"
          },
          "status": {
            "$ref": "#/components/schemas/ParticipationStatus"
          }
        },
        "allOf": [
          {
            "$ref": "#/components/schemas/Timestamps"
          }
        ],
        "required": ["_id", "userId", "journeyId"]
      },
      "ParticipationPopulated": {
        "type": "object",
        "properties": {
          "_id": {
            "$ref": "#/components/schemas/ObjectId"
          },
          "userId": {
            "$ref": "#/components/schemas/UserBasic"
          },
          "journeyId": {
            "$ref": "#/components/schemas/JourneyBasic"
          },
          "status": {
            "$ref": "#/components/schemas/ParticipationStatus"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "ParticipantListItem": {
        "type": "object",
        "properties": {
          "userId": {
            "$ref": "#/components/schemas/ObjectId"
          },
          "username": {
            "type": "string",
            "example": "johndoe"
          },
          "journeyId": {
            "$ref": "#/components/schemas/ObjectId"
          }
        },
        "required": ["userId", "username", "journeyId"]
      },
      "ParticipationCreateInput": {
        "type": "object",
        "properties": {
          "userId": {
            "$ref": "#/components/schemas/ObjectId"
          },
          "journeyId": {
            "$ref": "#/components/schemas/ObjectId"
          }
        },
        "required": ["userId", "journeyId"],
        "additionalProperties": false,
        "example": {
          "userId": "681ff9a3d2c8f4b5e6a12345",
          "journeyId": "682aa0b4e3d9g5c6f7b23456"
        }
      },
      "ParticipationCreateResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Participant added"
          },
          "participation": {
            "type": "object",
            "properties": {
              "_id": {
                "$ref": "#/components/schemas/ObjectId"
              },
              "userId": {
                "$ref": "#/components/schemas/ObjectId"
              },
              "journeyId": {
                "$ref": "#/components/schemas/ObjectId"
              }
            }
          }
        }
      },
      "ParticipationUpdateInput": {
        "type": "object",
        "properties": {
          "status": {
            "$ref": "#/components/schemas/ParticipationStatus"
          },
          "userId": {
            "$ref": "#/components/schemas/ObjectId"
          },
          "journeyId": {
            "$ref": "#/components/schemas/ObjectId"
          }
        },
        "additionalProperties": false
      },
      "ParticipationRemoveResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Participant removed"
          },
          "userId": {
            "$ref": "#/components/schemas/ObjectId"
          },
          "journeyId": {
            "$ref": "#/components/schemas/ObjectId"
          }
        }
      },
      "DeleteResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Participation deleted successfully"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "description": "Error message"
          }
        },
        "required": ["error"]
      }
    },
    "parameters": {
      "ParticipationId": {
        "name": "id",
        "in": "path",
        "required": true,
        "description": "The unique identifier of the participation",
        "schema": {
          "$ref": "#/components/schemas/ObjectId"
        }
      },
      "JourneyId": {
        "name": "journeyId",
        "in": "path",
        "required": true,
        "description": "The unique identifier of the journey",
        "schema": {
          "$ref": "#/components/schemas/ObjectId"
        }
      }
    },
    "responses": {
      "BadRequest": {
        "description": "Bad request - missing or invalid parameters",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            },
            "example": {
              "error": "userId et journeyId sont requis"
            }
          }
        }
      },
      "MissingQueryParams": {
        "description": "Missing required query parameters",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            },
            "example": {
              "error": "userId et journeyId sont requis dans la query"
            }
          }
        }
      },
      "ParticipationNotFound": {
        "description": "Participation not found",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            },
            "example": {
              "error": "Participation not found"
            }
          }
        }
      },
      "ParticipationConflict": {
        "description": "Participant already registered for this journey",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            },
            "example": {
              "error": "Participant already registered for this journey"
            }
          }
        }
      },
      "InternalServerError": {
        "description": "Internal server error",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            },
            "example": {
              "error": "An unexpected error occurred"
            }
          }
        }
      }
    }
  }
}
