{
  "openapi": "3.0.3",
  "info": {
    "title": "SnapTrack User Journeys API",
    "description": "API for managing user-journey relationships in SnapTrack application.",
    "version": "1.0.0",
    "contact": {
      "name": "SnapTrack Team"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Development server"
    },
    {
      "url": "https://snaptrack-nd9h.onrender.com",
      "description": "Production server"
    }
  ],
  "tags": [
    {
      "name": "User Journeys",
      "description": "User-journey relationship management endpoints"
    }
  ],
  "paths": {
    "/user-journeys": {
      "get": {
        "tags": ["User Journeys"],
        "summary": "List user journeys",
        "description": "Returns a list of journeys grouped by journey ID, with all associated users for each journey. Supports filtering by user ID and status.",
        "operationId": "listUserJourneys",
        "parameters": [
          {
            "name": "userId",
            "in": "query",
            "description": "Filter by user ID",
            "required": false,
            "schema": {
              "$ref": "#/components/schemas/ObjectId"
            }
          },
          {
            "name": "status",
            "in": "query",
            "description": "Filter by status",
            "required": false,
            "schema": {
              "type": "string",
              "example": "in-progress"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/JourneyWithUsers"
                  }
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      },
      "post": {
        "tags": ["User Journeys"],
        "summary": "Create a user-journey relationship",
        "description": "Creates a new relationship between a user and a journey.",
        "operationId": "createUserJourney",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserJourneyCreateInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User-journey relationship created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserJourney"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          }
        }
      }
    },
    "/user-journeys/{id}": {
      "get": {
        "tags": ["User Journeys"],
        "summary": "Get user-journey by ID",
        "description": "Returns a single user-journey relationship by its ID with populated user and journey data.",
        "operationId": "getUserJourneyById",
        "parameters": [
          {
            "$ref": "#/components/parameters/UserJourneyId"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserJourneyPopulated"
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/UserJourneyNotFound"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      },
      "put": {
        "tags": ["User Journeys"],
        "summary": "Update a user-journey relationship",
        "description": "Updates an existing user-journey relationship (e.g., change status).",
        "operationId": "updateUserJourney",
        "parameters": [
          {
            "$ref": "#/components/parameters/UserJourneyId"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserJourneyUpdateInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User-journey relationship updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserJourney"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "404": {
            "$ref": "#/components/responses/UserJourneyNotFound"
          }
        }
      },
      "delete": {
        "tags": ["User Journeys"],
        "summary": "Delete a user-journey relationship",
        "description": "Removes the relationship between a user and a journey.",
        "operationId": "deleteUserJourney",
        "parameters": [
          {
            "$ref": "#/components/parameters/UserJourneyId"
          }
        ],
        "responses": {
          "200": {
            "description": "User-journey relationship deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DeleteResponse"
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/UserJourneyNotFound"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ObjectId": {
        "type": "string",
        "pattern": "^[a-fA-F0-9]{24}$",
        "description": "MongoDB ObjectId (24 character hex string)",
        "example": "681ff9a3d2c8f4b5e6a12345"
      },
      "Timestamps": {
        "type": "object",
        "properties": {
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Creation timestamp"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Last update timestamp"
          }
        }
      },
      "UserBasic": {
        "type": "object",
        "properties": {
          "_id": {
            "$ref": "#/components/schemas/ObjectId"
          },
          "username": {
            "type": "string",
            "minLength": 3,
            "maxLength": 30,
            "description": "User's username",
            "example": "johndoe"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "User's email address",
            "example": "john@example.com"
          }
        },
        "required": ["_id", "username"]
      },
      "JourneyBasic": {
        "type": "object",
        "properties": {
          "_id": {
            "$ref": "#/components/schemas/ObjectId"
          },
          "title": {
            "type": "string",
            "description": "Journey title",
            "example": "Paris Discovery Tour"
          },
          "description": {
            "type": "string",
            "description": "Journey description"
          }
        },
        "required": ["_id"]
      },
      "UserJourney": {
        "type": "object",
        "properties": {
          "_id": {
            "$ref": "#/components/schemas/ObjectId"
          },
          "userId": {
            "$ref": "#/components/schemas/ObjectId"
          },
          "journeyId": {
            "$ref": "#/components/schemas/ObjectId"
          }
        },
        "allOf": [
          {
            "$ref": "#/components/schemas/Timestamps"
          }
        ],
        "required": ["_id", "userId", "journeyId"]
      },
      "UserJourneyPopulated": {
        "type": "object",
        "properties": {
          "_id": {
            "$ref": "#/components/schemas/ObjectId"
          },
          "userId": {
            "$ref": "#/components/schemas/UserBasic"
          },
          "journeyId": {
            "$ref": "#/components/schemas/JourneyBasic"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "JourneyUser": {
        "type": "object",
        "properties": {
          "userId": {
            "$ref": "#/components/schemas/ObjectId"
          },
          "username": {
            "type": "string",
            "minLength": 3,
            "maxLength": 30,
            "example": "johndoe"
          }
        },
        "required": ["userId", "username"]
      },
      "JourneyWithUsers": {
        "type": "object",
        "properties": {
          "journeyId": {
            "$ref": "#/components/schemas/ObjectId"
          },
          "journeyName": {
            "type": "string",
            "description": "Name or title of the journey",
            "example": "Paris Discovery Tour"
          },
          "users": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/JourneyUser"
            },
            "description": "List of users associated with this journey"
          }
        }
      },
      "UserJourneyCreateInput": {
        "type": "object",
        "properties": {
          "userId": {
            "$ref": "#/components/schemas/ObjectId"
          },
          "journeyId": {
            "$ref": "#/components/schemas/ObjectId"
          },
          "status": {
            "type": "string",
            "description": "Status of the user-journey relationship",
            "example": "in-progress"
          }
        },
        "required": ["userId", "journeyId"],
        "additionalProperties": false,
        "example": {
          "userId": "681ff9a3d2c8f4b5e6a12345",
          "journeyId": "682aa0b4e3d9g5c6f7b23456",
          "status": "in-progress"
        }
      },
      "UserJourneyUpdateInput": {
        "type": "object",
        "properties": {
          "userId": {
            "$ref": "#/components/schemas/ObjectId"
          },
          "journeyId": {
            "$ref": "#/components/schemas/ObjectId"
          },
          "status": {
            "type": "string",
            "description": "Status of the user-journey relationship"
          }
        },
        "additionalProperties": false
      },
      "DeleteResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "UserJourney deleted successfully"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "description": "Error message"
          }
        },
        "required": ["error"]
      }
    },
    "parameters": {
      "UserJourneyId": {
        "name": "id",
        "in": "path",
        "required": true,
        "description": "The unique identifier of the user-journey relationship",
        "schema": {
          "$ref": "#/components/schemas/ObjectId"
        }
      }
    },
    "responses": {
      "BadRequest": {
        "description": "Bad request - missing or invalid parameters",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            },
            "example": {
              "error": "Validation failed"
            }
          }
        }
      },
      "UserJourneyNotFound": {
        "description": "User-journey relationship not found",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            },
            "example": {
              "error": "UserJourney not found"
            }
          }
        }
      },
      "InternalServerError": {
        "description": "Internal server error",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            },
            "example": {
              "error": "An unexpected error occurred"
            }
          }
        }
      }
    }
  }
}
