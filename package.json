{
  "name": "snaptrack",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "format": "prettier --config ./.prettierrc.yml --check .",
    "format:write": "prettier --config ./.prettierrc.yml --write .",
    "nodemon": "cross-env AUTH_TOKEN=secret DEBUG=demo:* nodemon",
    "dev:back": "nodemon back/bin/start",
    "dev:front": "vite",
    "dev": "concurrently \"npm run dev:back\" \"npm run dev:front\"",
    "build": "vite build",
    "start": "node ./back/bin/start",
    "seed": "node ./back/scripts/seed.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "dependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "debug": "^4.4.1",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "leaflet": "^1.9.4",
    "mongodb": "^7.0.0",
    "mongoose": "^8.20.3",
    "morgan": "^1.10.1",
    "vue": "^3.5.24",
    "vue-router": "^4.6.3",
    "vuetify": "^3.10.11"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  }
}
